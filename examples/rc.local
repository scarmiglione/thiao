mount /mnt

if [ -f /mnt/pre-rc.sh ]
then
  echo cargando el contexto
  . /mnt/pre-rc.sh
else
  echo no hay contexto
  exit -1
fi


echo $HOSTNAME > /etc/hostname
hostname $HOSTNAME
#echo 127.0.0.1 $HOSTNAME >> /etc/hosts


if [ -n "$IP0" ]; then
	ifconfig eth0 $IP0
fi

if [ -n "$GATEWAY" ]; then
	route add default gw $GATEWAY
fi



if [ -f /mnt/post-rc.sh ]; then
	bash /mnt/post-rc.sh
fi


