mount /mnt

if [ -f /mnt/pre-rc.sh ]
then
  echo cargando el contexto
  . /mnt/pre-rc.sh
else
  echo no hay contexto
  exit -1
fi


echo $HOSTNAME > /etc/hostname
hostname $HOSTNAME
echo 127.0.0.1 $HOSTNAME >> /etc/hosts

if [ -n "$IP0" ]; then
	ifconfig eth0 $IP0
fi

if [ -n "$IP1" ]; then
    ifconfig eth1 $IP1
fi

if [ -n "$NETMASK" ]; then
	ifconfig eth0 netmask $NETMASK
fi

if [ -n "$DNS"  ]; then
	echo nameserver $DNS > /etc/resolv.conf
fi

if [ -n "$GW"  ]; then
	route add default gw $GW
fi

if [ -f /mnt/$ROOT_PUBKEY ]; then
	mkdir -p /root/.ssh
	cat /mnt/$ROOT_PUBKEY >> /root/.ssh/authorized_keys
	chmod -R 600 /root/.ssh/
fi

if [ -n "$USERNAME" ]; then
	useradd -s /bin/bash -m $USERNAME
	if [ -f /mnt/$USER_PUBKEY ]; then
		mkdir -p /home/$USERNAME/.ssh/
		cat /mnt/$USER_PUBKEY >> /home/$USERNAME/.ssh/authorized_keys
		chown -R $USERNAME:$USERNAME /home/$USERNAME/.ssh
		chmod -R 600 /home/$USERNAME/.ssh/authorized_keys
	fi
fi


if [ -f /mnt/post-rc.sh ]; then
	bash /mnt/post-rc.sh
fi


